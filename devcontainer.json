{
    "name": "PHP & MySQL",
    "image": "mcr.microsoft.com/devcontainers/php:8.1",
    "customizations": {
      "vscode": {
        "extensions": [
          "felixfbecker.php-intellisense"
        ]
      }
    },
    "postCreateCommand": "docker-compose up -d mysql", // Or use a MySQL Docker container setup
    "forwardPorts": [3306] // Forward MySQL port
  }
  